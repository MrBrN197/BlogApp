<section>
  <div class="flash">
    <% flash.each do |name, msg| -%>
      <%= content_tag :span, msg, class: name %>
    <% end -%>
  </div>
  <div class="post">
    <h2><%= @post.title %></h2>
    <p><%= @post.text %></p>
  </div>
  <div class="comments">
    <%= render @post.comments %>
  </div>


  <%= form_with url: add_comment_user_post_path do |f| %>
    <%= f.label :text, 'Comment' %>
    <%= f.text_area :text %>
    <%= f.submit %>
  <% end %>
</section>