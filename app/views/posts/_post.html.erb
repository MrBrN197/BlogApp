<div class="post-box">
  <%= link_to user_post_path(post.author, post) do %>
    <div class="post">
      <p><strong>Post #<%= post_counter + 1 %></strong></p>
      <h3><%= post.title %></h3>
      <p> <%= post.text %> </p>
      <div class="stats">
        <span><i class="far fa-heart"></i> <%= post.likes.size  %></span>
        |
        <span>Comments</i> <%= post.comments.size  %></span>
      </div>
    </div>
  <% end %>
  <% if local_assigns[:comments] %>
    <div class="comments">
      <%= render post.five_recent_comments %>
    </div>
  <% end %>
  <% if can? :destroy, post %>
    <%= button_to 'Delete Post', user_post_path(post.author, post), method: :delete, class: 'delete' %>
  <% end %>
</div>