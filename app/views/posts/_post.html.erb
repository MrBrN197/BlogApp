<div class="post-box">
  <%= link_to(user_post_path(@user, post)) do%>
    <div class="post">
      <p><strong>Post #<%= post_counter + 1 %></strong></p>
      <h3><%= post.title %></h3>
      <p> <%= post.text %> </p>
    </div>
  <% end %>
  <div class="comments">
    <%= render post.five_recent_comments %>
  </div>
</div>